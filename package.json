{
  "$schema": "https://json.schemastore.org/package",
  "name": "pure",
  "description": "The Discord bot as it should be: simple, powerful, and completely free. No premium, no paywall, just pure Discord experience.",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "author": "AtsuLeVrai",
  "license": "Apache-2.0",
  "packageManager": "bun@1.2.20",
  "homepage": "https://github.com/AtsuLeVrai/pure#readme",
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AtsuLeVrai/pure.git"
  },
  "bugs": {
    "url": "https://github.com/AtsuLeVrai/pure/issues"
  },
  "scripts": {
    "bot:start": "bun run dist/index.js",
    "bot:dev": "bun --watch src/index.ts",
    "bot:build": "bun build src/index.ts --outdir dist --target node --external unfetch",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "biome:check": "biome check --write --unsafe",
    "check-types": "bun tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@discord-player/extractor": "^7.1.0",
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.18.0",
    "@neondatabase/serverless": "^1.0.1",
    "bufferutil": "^4.0.9",
    "discord-player": "^7.1.0",
    "discord.js": "^14.21.0",
    "drizzle-orm": "^0.44.4",
    "ffmpeg-static": "^5.2.0",
    "i18next": "^25.3.6",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/node": "^24.3.0",
    "@types/ws": "^8.18.1",
    "discord-api-types": "^0.38.20",
    "drizzle-kit": "^0.31.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write --unsafe"
    ]
  }
}
