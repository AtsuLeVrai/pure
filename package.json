{
  "$schema": "https://json.schemastore.org/package",
  "name": "pure",
  "description": "The Discord bot as it should be: simple, powerful, and completely free. No premium, no paywall, just pure Discord experience.",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "author": "AtsuLeVrai",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AtsuLeVrai/pure.git"
  },
  "bugs": {
    "url": "https://github.com/AtsuLeVrai/pure/issues"
  },
  "homepage": "https://github.com/AtsuLeVrai/pure#readme",
  "scripts": {
    "bot:start": "cross-env NODE_ENV=production node dist/index.js",
    "bot:dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "bot:build": "tsdown",
    "biome:check": "biome check --write --unsafe",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "dotenv:encrypt": "dotenvx run -- dotenvx encrypt",
    "dotenv:decrypt": "dotenvx run -- dotenvx decrypt",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepare": "husky"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.48.4",
    "@prisma/client": "^6.13.0",
    "discord.js": "^14.21.0",
    "winston": "^3.17.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/node": "^24.1.0",
    "cross-env": "^10.0.0",
    "discord-api-types": "^0.38.18",
    "husky": "^9.1.7",
    "prisma": "^6.13.0",
    "rimraf": "^6.0.1",
    "tsdown": "^0.13.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
