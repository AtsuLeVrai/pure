{
  "$schema": "https://json.schemastore.org/package",
  "name": "pure",
  "description": "The Discord bot as it should be: simple, powerful, and completely free. No premium, no paywall, just pure Discord experience.",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "author": "AtsuLeVrai",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "homepage": "https://github.com/AtsuLeVrai/pure#readme",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AtsuLeVrai/pure.git"
  },
  "bugs": {
    "url": "https://github.com/AtsuLeVrai/pure/issues"
  },
  "scripts": {
    "bot:start": "node dist/index.js",
    "bot:dev": "tsx watch src/index.ts",
    "bot:build": "tsdown",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "biome:check": "biome check --write --unsafe",
    "check-types": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@discord-player/extractor": "^7.1.0",
    "@discordjs/voice": "^0.19.0",
    "better-sqlite3": "^12.2.0",
    "bufferutil": "^4.0.9",
    "discord-player": "^7.1.0",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "ffmpeg-static": "^5.2.0",
    "i18next": "^25.4.2",
    "mediaplex": "^1.0.0",
    "uuid": "^11.1.0",
    "zlib-sync": "^0.1.10",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "discord-api-types": "^0.38.21",
    "drizzle-kit": "^0.31.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "tsdown": "^0.14.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write --unsafe"
    ]
  }
}
