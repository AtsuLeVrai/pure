{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "check-types"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "check-types": {
      "dependsOn": []
    },
    "start": {
      "dependsOn": ["build"]
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "outputs": ["drizzle/**"]
    },
    "db:migrate": {
      "cache": false
    },
    "bot:dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@pure/database#build"]
    },
    "bot:build": {
      "dependsOn": ["@pure/database#build", "check-types"],
      "outputs": ["dist/**"]
    },
    "bot:start": {
      "dependsOn": ["bot:build"]
    }
  }
}
